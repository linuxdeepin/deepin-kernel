+	__vx_save_min_skip(ret, min, val)
+
+static inline
+void __vx_save_min_skip(int ret, int *min, int val)
+{
+	if (ret > -2)
+		return;
+	if ((*min > val) || !*min)
+		*min = val;
+}
+
+static inline
+int vx_try_skip(runqueue_t *rq)
+{
+	/* artificially advance time */
+	if (rq->idle_skip && !list_empty(&rq->hold_queue)) {
+		rq->idle_time += rq->idle_skip;
+		return 1;
+	}
+	return 0;
+}
