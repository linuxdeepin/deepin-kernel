+static void scc_ch_write(char ch)
+{
+	volatile char *p = NULL;
+
+	if (MACH_IS_TT || MACH_IS_FALCON)
+		p = (volatile char *)&scc.cha_b_ctrl;
+
+	if (MACH_IS_ST)
+		p = (volatile char *)&scc.cha_b_ctrl;
+
+	if (MACH_IS_STE)
+		p = (volatile char *)&st_escc.cha_b_ctrl;
+
+	do {
+		scc_delay();
+	}
+	while (!(*p & 4));
+	// scc_delay();
+	// *p = 8;
+	scc_delay();
+	*(p+1) = ch;
+}
