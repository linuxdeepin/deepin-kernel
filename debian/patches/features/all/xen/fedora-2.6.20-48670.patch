+static int __init tpmif_init(void)
+{
+	long rc = 0;
+	struct tpm_private *tp;
+
+	if (is_initial_xendomain())
+		return -EPERM;
+
+	tp = tpm_private_get();
+	if (!tp) {
+		rc = -ENOMEM;
+		goto failexit;
+	}
+
+	IPRINTK("Initialising the vTPM driver.\n");
+	if ( gnttab_alloc_grant_references ( TPMIF_TX_RING_SIZE,
+	                                     &gref_head ) < 0) {
+		rc = -EFAULT;
+		goto gnttab_alloc_failed;
+	}
+
+	init_tpm_xenbus();
+	return 0;
+
+gnttab_alloc_failed:
+	tpm_private_put();
+failexit:
+
+	return (int)rc;
+}
