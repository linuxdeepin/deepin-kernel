+	sec = ctime + clock_cmos_diff;
+	write_seqlock_irqsave(&xtime_lock, flags);
+	xtime.tv_sec = sec;
+	xtime.tv_nsec = 0;
+	jiffies_64 += sleep_length;
+	write_sequnlock_irqrestore(&xtime_lock, flags);
+	touch_softlockup_watchdog();
+	return 0;
