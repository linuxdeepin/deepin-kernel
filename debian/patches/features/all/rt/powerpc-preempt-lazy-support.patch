+
 /* Traced system call support */
 syscall_dotrace:
 	bl	.save_nvgprs
@@ -270,7 +270,7 @@ syscall_dotrace:
 syscall_enosys:
 	li	r3,-ENOSYS
 	b	syscall_exit
