        	mtlr	r4
@@ -1008,7 +1016,7 @@ _GLOBAL(enter_rtas)
 	li	r0,0
 	ori	r0,r0,MSR_EE|MSR_SE|MSR_BE|MSR_RI
 	andc	r0,r6,r0
